<studierstube>
	<kernel 
	    logMode="off" 
		logFileName="kernelLog.txt" 
		guibinding="soqt"
		updateMode="timer"
		updateRate="0.03333"/>
	
	<Component  name="Event"
		        availability="demand"	
        	    lib="stbevent">
	<Param key   ="configFile" 
		   value ="opentracker.xml" />	
	</Component>

	<Component  name="Viewer"
		        availability="demand"	
        		lib="stbviewer">
		<Param key   ="configFile" 
		       value ="viewer.iv" />	
	</Component>
	
	<Application 
	    name="SimpleApp"
		availablity="load"
		lib="simple"	
	/>
</studierstube>
