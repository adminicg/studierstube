<studierstube>
	<kernel 
	    logMode="off" 
		logFileName="kernelLog.txt" 
		guibinding="sowin"
		updateMode="timer"
		updateRate="0.03333"/>
	
    <Component  name="Event"
		        availability="onload"	
        	    lib="stbevent">
	<Param key   ="configFile" 
		   value ="opentracker.xml" />	
	</Component>


	<Component  name="Viewer"
	        availability="ondemand"	
        	lib="stbviewer">
	    <Param key   ="configFile" 
		       value ="viewer.iv" />	
	</Component>
	

	<Application 
	    name="SimpleApp"
		availablity="onload"
		lib="simple"	
	/>
	

</studierstube>