<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "opentracker.dtd">
<OpenTracker>
	<configuration>
		<!-- Here we place all the necessary configurations -->
		<ARToolKitPlusConfig camera-parameter="Program Files/stb4/data/QuickCamNotebookPro2.cal" undist-mode="lut" marker-mode="idbased" border-width="0.125" treshold="auto" pose-estimator="std" ov-config="openvideo.xml" ov-sink="artoolkitPluSink"/>
    <EventConfig keyevents="on" mouseevents="on"/>
	</configuration>

	<!-- This sink is in charge of sending data to stb4 -->
	<EventSink tracking="marker1">
		<!-- This source receives data from ARToolKit Plus -->
		<ARToolKitPlusSource center="0 0" size="0.08 0.08" tag-id="200"/>
	</EventSink>

</OpenTracker>
