<studierstube>
	<kernel logMode="off" logFileName="kernelLog.txt" updateMode="manual" updateRate="0.02" />

	<!-- This is the Event Component. It is in charge of providing us with Tracking data -->
    <Component  name="Event" availability="ondemand" lib="stbevent">
      <Param key="configFile" value ="opentracker.xml" />
	</Component>

	<!-- This is the Viewer Component. It is in charge of providing us with a Viewer window -->
	<Component name="Viewer" availability="onload" lib="stbviewer_simple">
	    <Param key="configFile" value="viewer.iv" />
	</Component>

	<!-- This is the Starlight Component. It is in charge of providing us with extra nodes with stb3 functionalities -->
	<Component name="Starlight" availability="ondemand" lib="stbstarlight">
	</Component>

	<!-- This is the Video Component. It is in charge of providing us with Video Background in our scene -->
	<Component name="Video" availability="onload"	lib="stbvideo">
	    <Param key="configFile" value="openvideo.xml" />
	    <Param key="ovSinkName" value="Stb4VideoSink" />
	    <Param key="single-threaded" value="true" />
	</Component>

	<!-- This is the Application -->
    <Application name="SimpleApp" availability="onload" lib="stbapp_simple">
                <Param key="sceneFile"  value ="scene.iv" />
                <Param key="needViewer" value ="true" />
                <Param key="needEvent"  value ="true" />
    </Application>

</studierstube>
