<?xml version="1.0" encoding="UTF-8"?>

<openvideo scheduleMode="timer" updateRate="30">

	<!-- In this example we receive video from VideoWrapper -->
	<DSVLSrc config-file="dsvl.xml" pixelformat="B8G8R8" num-buffers="4" flip-v="true"> 

		<!-- This will open a glut window with the video provided by the sink -->
		<GLUTSink name="glsink1" pixelformat="B8G8R8"/>

		<!-- This will deliver video to ARToolKitPlus -->
		<VideoSink name="Stb4VideoComponentSink" pixelformat="B8G8R8"/> 
		<!-- This will create an OpenGL texture, necessary for video background in stb4 -->
		<GL_TEXTURE_2D_Sink name="videoBackgroundSink" pixelformat="B8G8R8"/>

	</DSVLSrc>

</openvideo>
