<studierstube>
	<kernel 
		guibinding="sowin"
		updateMode="timer"
		updateRate="0.03333"/>
	
    <Component  name="Event"
		        availability="ondemand"	
        	    lib="stbevent">
	<Param key   ="configFile" 
		   value ="opentracker.xml" />	
	</Component>
	

	<Component  name="Starlight"
	            availability="ondemand"	
        	    lib="stbstarlight">
	</Component>
	
	<Component  name="Viewer"
	            availability="ondemand"	
                lib="stbviewer">
	    <Param  key   ="configFile" 
		        value ="viewer.iv" />	
	</Component>


    <Application name="SimpleApp"
                availability="onload"
                lib="simple">     
                <Param  key   ="sceneFile"  value ="simplescene.iv" />	
                <Param  key   ="needViewer" value ="true" />	
                <Param  key   ="needEvent"  value ="true" />	
		               


    </Application>
    

</studierstube>
