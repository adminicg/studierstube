<?xml version="1.0" encoding="UTF-8"?>
<OpenTracker>
	<configuration>
		<!-- Here we place all the necessary configurations -->
		<ConsoleConfig headerline="Sample Tracking Input" interval="1"/>
	    <EventConfig keyevents="on" mouseevents="on"/>
	</configuration>

	<!-- With a console sink we send the output to the shell -->	
	<ConsoleSink comment="Test Source">
		<!-- This sink is in charge of sending data to stb4 -->
		<EventSink tracking="otTrack">
			<!-- A test source generating mostly noise -->
			<TestSource position="1 1 1" noise="0.5" frequency="10"/>
		</EventSink>
	</ConsoleSink>

</OpenTracker>
