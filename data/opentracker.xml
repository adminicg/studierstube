<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE OpenTracker SYSTEM "opentracker.dtd">
<OpenTracker>
	<configuration>
		<!-- Here we place all the necessary configurations -->
		<ARToolKitPlusConfig camera-parameter="quickcampro400.dat" marker-mode="idbased" 
		treshold="110" videomode="320 240" ov-config="openvideo.xml" ov-sink="artoolkitPluSink"/>
 
		<ConsoleConfig headerline="Tracking Input" interval="1" display="off"/>
		<EventConfig keyevents="on" mouseevents="on"/>
	</configuration>

<!-- --------------------- ARTK+ ---------------------------------------------------------- -->	
	<!-- With a console sink we send the output to the shell -->	
	<ConsoleSink comment="ARTK+">
		<!-- This sink is in charge of sending data to stb4 -->
		<EventSink tracking="otARToolKitPlusSource">
			<!-- We add an extra tranformation -->
			<EventTransform scale="1 1 1" rotationtype="euler" rotation="3.141592654 0 0" translation="0 0 0">
				<!-- This source receives data from ARToolKit Plus -->
				<ARToolKitPlusSource center="0 0" size="1 1" tag-id="030"/>
			</EventTransform>
		</EventSink>
	</ConsoleSink>

<!-- --------------------- TestSrc ---------------------------------------------------------- -->	
	<!-- With a console sink we send the output to the shell -->	
	<ConsoleSink comment="Test Source">
		<!-- This sink is in charge of sending data to stb4 -->
		<EventSink tracking="otTestSource">
			<!-- A test source generating mostly noise -->
			<TestSource position="1 1 1" noise="0.5" frequency="10"/>
		</EventSink>
	</ConsoleSink>

<!-- --------------------- EventKeyboardSource ---------------------------------------------------------- -->	
  <ConsoleSink comment="keyboard" active="on">
    <EventSink tracking="otEventKeyboardSource">
      <EventKeyboardSource number="0"/>
    </EventSink>
  </ConsoleSink>

<!-- --------------------- EventMouseSource    ---------------------------------------------------------- -->	  
  <ConsoleSink comment="mouse" active="on">
    <EventSink  tracking="otEventMouseSource">
      <EventMouseSource mode="relative"/>
    </EventSink>
  </ConsoleSink>


</OpenTracker>
